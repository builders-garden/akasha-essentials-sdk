{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es2022",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true
  }
}
